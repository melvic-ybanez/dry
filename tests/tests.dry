def test_instance_properties() {
    class Pet {
        def sound() {
            return "quack!";
        }
    }

    let duck = Pet();
    assert("Ducks should quack!", duck.sound(), "quack!");

    let denji = Pet();
    denji.sound = lambda() {
        return "Woof!";
    };
    assert("Denji should say 'Woof!'", denji.sound(), "Woof!");
}

